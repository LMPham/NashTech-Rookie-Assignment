@{
    ViewData["Title"] = "Home Page";
}

@model PaginatedList<ProductBriefDto>

<div class="row">
    @* Filter section *@
    <div class="col-2">
        @* Filter by price *@
        <div class="row mb-3">
            @await Component.InvokeAsync("FilterByPrice")
        </div>

        @*Filter by customer review score*@
        <div class="row mb-3">
            @await Component.InvokeAsync("FilterByCustomerReviewScore")
        </div>
    </div>

    @*Product section*@
    <div class="col-10 mb-3">
        <div class="row">
            <div class="col text-start p-1">
                <h5>Results</h5>
                <p>1-47 of 367 results</p>
            </div>
        </div>
        @await Component.InvokeAsync("ProductList", @Model)
    </div>
</div>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Presentation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Presentation.styles.css" asp-append-version="true"/>
</head>
<body>
    <header>
        @* Nav bar *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @* Brand *@
                <a class="navbar-brand nav-item px-3" asp-area="" asp-controller="Home" asp-action="Index">
                    Home
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @* Search bar *@
                    @* <form class="input-group mx-1" asp-controller="Home" asp-action="Index">
                        <select class="form-select flex-grow-0 resizeselect round-left-border" aria-label="Search dropdown">
                            <option selected>All</option>
                            <option value="1">Men</option>
                            <option value="2">Women</option>
                            <option value="3">Children</option>
                        </select>
                        <input type="text" class="form-control flex-grow-1" id="searchBar" placeholder="Search">
                        <button class="btn search-button round-right-border" type="submit">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>

                    </form> *@
                    @await Component.InvokeAsync("SearchBar", Model.Queries)
                    <ul class="navbar-nav flex-grow-1">
                        @* User *@
                        <partial name="_LoginPartial.cshtml"/>
                        @* Orders *@
                        <li class="nav-item mx-1">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                Orders
                            </a>
                        </li>
                        @* Cart *@
                        <li class="nav-item mx-1">
                            <a class="nav-link text-white text-nowrap" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fa-solid fa-cart-shopping"></i>
                                <span>Cart</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* FontAwesome *@
    <script src="https://kit.fontawesome.com/2e823690c3.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
